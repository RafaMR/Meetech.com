<form
  action="/authentication/sign-up"
  method="POST"
  enctype="multipart/form-data"
>
  <label for="input-name">Name</label>
  <input
    type="text"
    id="input-name"
    name="name"
    placeholder="Your Name"
    required
  />

  <label for="input-email">Email</label>
  <input
    type="email"
    id="input-email"
    name="email"
    placeholder="Your Email"
    required
  />

  <label for="input-password">Password</label>
  <input
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
    required
    {{! minlength="8" }}
  />

  <label for="input-city">City</label>
  <input type="text" id="input-city" name="city" placeholder="City" required />

  <label for="input-zip">Zip code</label>
  <input
    type="text"
    id="input-zip"
    name="zipCode"
    placeholder="Zip code"
    required
  />

  <label for="input-job">Job Title</label>
  <input type="text" id="input-job" name="jobTitle" placeholder="Job Title" />

  <label for="input-linkedin">LinkedIn Profile</label>
  <input
    type="text"
    id="input-linkedin"
    name="linkedIn"
    placeholder="LinkedIn profile"
  />

  <label for="input-picture">Profile picture</label>
  <input id="input-picture" type="file" accept="image/*" name="picture" />

  <button>Sign Up</button>
</form>