<form method="POST" enctype="multipart/form-data">
  <label for="input-name">Name</label>
  <input
    type="text"
    id="input-name"
    name="name"
    placeholder="Your Name"
    value="{{user.name}}"
  />

  <label for="input-email">Email</label>
  <input
    type="email"
    id="input-email"
    name="email"
    placeholder="Your Email"
    value="{{user.email}}"
  />

  <label for="input-password">Password</label>
  <input
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
    value="{{user.password}}"
    {{! minlength="8" }}
  />

  <label for="input-city">City</label>
  <input
    type="text"
    id="input-city"
    name="city"
    placeholder="City"
    value="{{user.city}}"
  />

  <label for="input-zip">Zip code</label>
  <input
    type="text"
    id="input-zip"
    name="zipCode"
    placeholder="Zip code"
    value="{{user.zipCode}}"
  />

  <label for="input-job">Job Title</label>
  <input
    type="text"
    id="input-job"
    name="jobTitle"
    placeholder="Job Title"
    value="{{user.jobTitle}}"
  />

  <label for="input-linkedin">LinkedIn Profile</label>
  <input
    type="text"
    id="input-linkedin"
    name="linkedIn"
    placeholder="LinkedIn profile"
    value="{{user.linkedIn}}"
  />

  <label for="input-picture">Profile picture</label>
  <input id="input-picture" type="file" accept="image/*" name="picture" />

  <button>Edit profile</button>
</form>