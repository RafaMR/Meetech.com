<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav>
      <a href="/">HOME</a>
      {{#if user}}
        <a href="/event/create">Create an event</a>
        <a href="/messages/{{user._id}}">Messages</a>
        <a href="/user-profile/{{user._id}}">{{user.name}}'s Profile</a>
        <form action="/authentication/sign-out" method="POST">
          <button>Sign Out</button>
        </form>
      {{else}}
        <a id="signin" href="/authentication/sign-in">Sign in</a>
        <a id="signup" href="/authentication/sign-up">Sign up</a>
      {{/if}}
    </nav>
    {{{body}}}

    <footer>(c) Ironhack students</footer>
    <script src="/scripts/script.js"></script>
  </body>
</html>