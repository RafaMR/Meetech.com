<div class="signin">
  <form class="form3" action="/authentication/sign-in" method="POST">
    <label for="input-email">Email</label>
    <input
      type="email"
      id="input-email"
      name="email"
      placeholder="Your Email"
    />
    <label for="input-password">Password</label>
    <input
      type="password"
      name="password"
      id="input-password"
      placeholder="A Strong Password"
    />
    <button>Sign in</button>
  </form>
</div>