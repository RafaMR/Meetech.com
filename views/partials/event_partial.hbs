<div class="publication-item">
  <a href="/event/{{_id}}">
    {{#if picture}}
      <img src="{{picture}}" alt="{{description}}" />
    {{/if}}
    <div>
      <h3>{{name}}</h3>

      <small>{{date date}}</small>
      |
      <small>{{creator.name}}</small>
    </div>
  </a>

  <span>{{likeCount}}</span>
  {{#if liked}}
    <form method="POST" action="/event/{{_id}}/unlike">
      <button>👎</button>
    </form>
  {{else}}
    <form method="POST" action="/event/{{_id}}/like">
      <button>👍</button>
    </form>
  {{/if}}

</div>